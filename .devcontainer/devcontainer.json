{
  "name": "victor2wy/rstudio",
  "image": "victor2wy/rstudio",
  "containerEnv": {
    "RENV_PATHS_CACHE": "/renv/cache",
    "PASSWORD": "password"
  },
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "libcurl4-openssl-dev, libgit2-dev"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/rocker-org/devcontainer-features/renv-cache:0": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest",
      "pipx": true
    },
    "ghcr.io/rocker-org/devcontainer-features/r-apt:0": {
      "installVscDebugger": true,
      "installDevTools": true,
      "vscodeRSupport": "full",
      "installRadian": true
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.3": {},
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/ruff:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // R Extensions
        "rdebugger.r-debugger",
        "reditorsupport.r",
        // Documentation Extensions
        "quarto.quarto",
        "purocean.drawio-preview",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one",
        // Docker Supporting Extensions
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        // Python Extensions
        "ms-python.python",
        "ms-toolsai.jupyter",
        "mhutchie.git-graph",
        "charliermarsh.ruff"
      ],
      "settings": {
        "r.lsp.enabled": true,
        "r.rterm.linux": "/usr/local/bin/radian",
        "r.bracketedPaste": true,
        "r.plot.useHttpgd": true,
        "[r]": {
          "editor.wordSeparators": "`~!@#%$^&*()-=+[{]}\\|;:'\",<>/?"
        },
        "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
        "terminal.integrated.fontLigatures.enabled": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh",
            "icon": "terminal-ubuntu"
          }
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postStartCommand": "bash .devcontainer/postStart.sh",
  "overrideCommand": false, // lets rstudio-server auto start
  // map 8787 (rstudio in container) to host 8889
  // modify the 8888 to whatever you want
  "appPort": [
    "8889:8787"
  ],
  "forwardPorts": [
    "8889:8787",
    9000, // httpgd
    4200 // quarto preview
  ],
  "shutdownAction": "none",
  "remoteUser": "rstudio"
}